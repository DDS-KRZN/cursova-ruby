<div><p style="color: green"><%= notice %></p>

<% @team_projects.group_by{|tp| tp.team}.each do |team, team_projects| %>
  <h3>Список проектів команди <%= team.name %>:</h3>
  <% team_projects.each do |tp| %>
    <table>
      <tbody>

        <th>Проект:</th>
        <td><%= tp.project.name %></td>
        <td><%= link_to "Перейти на сторінку", tp , class: 'btn'%></td>
      </tr>
      </tbody>
    </table>
    
  <% end %>
<% end %>

