<h1>Editing team</h1>

<br>
<%= form_for @team do |f| %>
  <div class="field">
    <p><%= f.label :name %> <br>
      <%= f.text_field :name, class: 'input-field' %>
    </p>
  </div>
  <div class="field">
    <p>
      <%= f.label :department_id %><br>
      <%= f.collection_select :department_id, Department.all, :id, :name, {}, { class: 'select-field' } %>
    </p>
  </div>
  <div class="field">
    <p>
    <%= f.label :director_id ,"Директор"%><br>
    <%= f.collection_select :director_id, Person.all, :id, :name, {}, { class: 'select-field' } %>
    </p>
  </div>

<div> <%= f.submit "Зберегти зміни", class: 'btn' %></div>
 
<% end %>
<div>
  <%= link_to "Показати команду", @team, class: 'btn' %> 
  <%= link_to "Повернутися до списку", teams_path, class: 'btn' %>
</div>
