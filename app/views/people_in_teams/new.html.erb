<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300&family=Montserrat:wght@700&display=swap" rel="stylesheet">
<h1>New people in team</h1>

<br>
<%= form_for @people_in_team do |f| %>
  <div class="field">
    <p><%= f.label :team_id ,"Назва команди"%><br>
      <%= f.collection_select :team_id, Team.all, :id, :name , {}, { class: 'select-field' }%> 
    </p>
  </div>
  <div class="field">
    <p><%= f.label :person_id,"Член команди"%><br>
      <%= f.collection_select :person_id, Person.all, :id, :name, {}, { class: 'select-field' } %>

    </p>
  </div>

  <%= render "form", people_in_team: @people_in_team %>



<div>
  <%= link_to "Показати інформацію ", people_in_team_path(f), class: 'btn' %>
</div>
<% end %>
