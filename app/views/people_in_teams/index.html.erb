<p style="color: green"><%= notice %></p>

<h1>Члени команди</h1>

<div id="people_in_teams">
  <% @people_in_teams.each do |people_in_team| %>

    <p>
    <table>

      <tbody>
      <tr><th>Назва команди : </th>
        <td><%= people_in_team.team.name %> </td> </tr>
       <tr><th>Члени команди : </th>
         <td>
           <% people_in_team.team.people.each do |person| %>
             <%= person.name %><br>
           <% end %>
         </td>

      </tbody>
    </table>


      <%= link_to "Показати інформацію ", people_in_team %>
    </p>
  <% end %>
</div>

<div>
<%= link_to "Додати нового члена команди", new_people_in_team_path %>

</div>