<h1>People in Teams</h1>

<table>
  <thead>
  <tr>
    <th>Person</th>
    <th>Team</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @people_in_teams.each do |people_in_team| %>
    <tr>
      <td><%= people_in_team.people.name %></td>
      <td><%= people_in_team.team.name %></td>
      <td><%= link_to 'Show', people_in_team %></td>
      <td><%= link_to 'Edit', edit_people_in_team_path(people_in_team) %></td>
      <td><%= link_to 'Destroy', people_in_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

