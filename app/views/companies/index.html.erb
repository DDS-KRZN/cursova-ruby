<h1>Компанії</h1>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300&family=Montserrat:wght@700&display=swap" rel="stylesheet">
<div>
  <table>
  <thead>
  <tr>

    <th>Назва</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= link_to 'Перейти на сторінку', company, class: 'btn' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Нова компанія', new_company_path, class: 'btn' %>
<%= link_to 'На головну', root_path, class: 'btn' %>

</div>


