<h1>Відділи</h1>

<table>
  <thead>
  <tr>
    <th>Назва</th>
    <th>Компания</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td><%= department.company.name %></td>
      <td><%= link_to 'Показати', company_department_path(department.company, department) %></td>
      <td><%= link_to 'Редагувати', edit_company_department_path(department.company, department) %></td>
      <td><%= link_to 'Видалити', company_department_path(department.company, department), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новий відділ', new_company_department_path(@company) %>
