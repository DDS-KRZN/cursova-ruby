<h1>Відділи</h1>

<table>
  <thead>
  <tr>
    <th>Назва</th>
    <th>Компания</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td><%= department.company.name %></td>
      <td><%= link_to 'Показать', department %></td>
      <td><%= link_to 'Редактировать', edit_department_path(department) %></td>
      <td><%= link_to 'Удалить', department, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый Отдел', new_company_department_path(@company) %>
