<h1>Відділи</h1>

<table>
  <thead>
  <tr>
    <th>Відділ</th>
    <th>Компания</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td><%= department.company.name %></td>
      <td><%= department.person.name %></td>
      <td><%= link_to 'Show', company_department_path(department.company, department) %></td>
      <td><%= link_to 'Edit', edit_company_department_path(department.company, department) %></td>
      <td><%= link_to 'Destroy', company_department_path(department.company, department), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>

</table>

<br>

<%= link_to 'Новий відділ', new_company_department_path(@company) %>